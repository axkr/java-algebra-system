(*test syzygien program, dec 1991 hk *) 

(*example 1 by J. Philipp. ------------ *) 
 
VL:=DIPVDEF(LIST("w","x","y","z")). 

PM := MREAD(VL).

(  
 ( 3 x**3- w, -1/23 w z - x, 4 w y**2 - x**2 ) 
) 

PMWR(PM, VL).

SY:=SYHC(PM, 1, 0).

PMWR(SY, VL).
 
SYTHC(SY, PM, VL).


(*example 6.17 from Buchberger (ch 6). ------------ *) 

VL:=DIPVDEF(LIST("x","y")). 

PM := MREAD(VL).

(  
 ( x**2 y - x y, x y**2 - x**2, x**3 y - x**2 y + x**3 - x**2 ) 
) 

PMWR(PM, VL).

SY:=SYHC(PM, 1, 0).

PMWR(SY, VL).
 
SYTHC(SY, PM, VL).

 
(*example 1 from Apel Lassner (1988). -------------- *) 

VL:=DIPVDEF(LIST("x1","x2","x3")). 

T := DIRLRD(VL).

(
 ( x2 ), ( x1 ), ( x1 x2 - x3 ), 
 ( x3 ), ( x2 ), ( x2 x3 - x1 ), 
 ( x3 ), ( x1 ), ( x1 x3 + x2 ), 
)

PLWR(T, VL).

PM := NMREAD(VL, T).

( 
 ( x1 x2, x1 ) 
)

PMWR(PM, VL).

SY:=SYHNL(PM, 1, 0, T).

PMWR(SY, VL).
 
SYTHNL(SY, PM, VL, T).

(* with ore condition algorithm. *)

P:=FIRST(PM). p1:=FIRST(P). p2:=FIRST(RED(P)). 

OREC(p1,p2, q1, q2, T). 

Q:=LIST(LIST(q1,q2)).

PMWR(Q,VL). 

SYTHNL(Q, PM, VL, T).


