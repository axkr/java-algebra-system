PROCEDURE cgb(p,co,opt);
VAR c,d,g,r: ANY;
BEGIN 
     CGBOPT(opt);
     g:=GSYS(p);
     r:=GSYSRED(g);
     c:=CGBFGSYS(g);
     d:=CGBGLOBRED(c);
     BLINES(1);
     CLOUT("__________________________________________________________________________"); BLINES(1);
     SWRITE(co); BLINES(1);
     CDPWRITE(p);
     CGBOPTWRITE();
     GSYSWRITE(g);
     CLOUT("Reduced:");BLINES(0);
     GSYSWRITE(r);
     CGBWRITE(c);
     CLOUT("Quantifier free formula:");BLINES(0);
     CGBQFWRITE(c);
     CLOUT("Globally reduced:");BLINES(0);
     CGBWRITE(d);
     CLOUT("Quantifier free formula:");BLINES(0);
     CGBQFWRITE(d);
     BLINES(1);
     CLOUT("__________________________________________________________________________");BLINES(1);
END cgb;

CO1:="Test example for CGB".
P1:=CDPREAD().
IP (A1,A2,A3,A4) (X1,X2,X3,X4)

0 
() 
1 
() 
. 

(
( X4 - ( A4 - A2 )),
( X1 + X2 + X3 + X4 - ( A1 + A3 + A4 )),
( X1 X3 + X1 X4 + X2 X3 + X3 X4 - ( A1 A4 + A1 A3 + A3 A4 )),
( X1 X3 X4 - ( A1 A3 A4 ))
).

cgb(P1,CO1,LIST(0,0,0,1,0,2,2)).
