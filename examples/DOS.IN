(*Some utility functions for DOS usage. *) 

PROCEDURE dir;
(* Dirctory. *)
BEGIN
    DOS("c:\command.com /c dir/p");
  END dir;

PROCEDURE command;
(*Call COMMAND.COM. *)
BEGIN
    DOS("c:\command.com");
  END command;

PROCEDURE dos(s);
(*Call COMMAND.COM with parameter string s. *)
BEGIN
    DOS(CCONC("c:\command.com /c ",s));
   END dos;

.
